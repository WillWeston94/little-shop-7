<h1>Ahoy, matey! Here be ye Merchant Page</h1>


<section id="merchant_info-<%= @merchants.id %>">
  <h2><%= @merchants.name %></h2>
</section>

<%= @merchants.name %>'s Items: 
<section id="items_index-<%= @merchants.id %>">
  <%= link_to "Items", "/merchants/#{@merchants.id}/items" %>
</section>

<section id="invoices_index-<%= @merchants.id %>">
  <%= link_to "Invoices", "/merchants/#{@merchants.id}/invoices" %>
</section>

<section id="discount_index-<%= @merchants.id %>">
  <%= link_to "View Bulk Discounts", "/merchants/#{@merchants.id}/bulk_discounts" %>
</section>

<h3>Merchant Dashboard</h3>
<section id="top_five_customers-<%= @merchants.id %>">
  <ul>
    <% @top_5.each do |customer| %>
      <li>
      <%= customer.first_name %>
      <%= customer.last_name %>
      (<%= customer.amount_of_transactions %>Transactions)
      </li>
    <% end %>
  </ul>
</section>

<h3>Items ready to ship</h3>
<section id="items_to_ship-<%= @merchants.id %>">
  <ul>
    <% @items_to_ship.each do |item| %>
    <li>
      <%= item.name %>
      <%= link_to item.invoice_id, "/merchants/#{@merchants.id}/invoices/#{item.invoice_id}"%>
      <%= item.invoice_created_at.strftime("%A, %B %d, %Y") %>
      <%= %>
    </li>
    <% end %>
  </ul>
</section>
